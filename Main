import java.util.Scanner;

public class Main {
    private Jogador chico;
    private Loja loja;
    private JogoAdivinharNumero miniJogo;
    private Scanner scanner = new Scanner(System.in);

    public Main() {
        chico = new Jogador("Chico");
        loja = new Loja();
        miniJogo = new JogoAdivinharNumero();
    }

    // Inicia o jogo
    public void iniciarJogo() {
        System.out.println("ğŸµ Bem-vindo ao CHICO CARE! Cuide do seu pet virtual. ğŸµ");
        boolean jogoAcabou = false;

        while (!jogoAcabou) {
            chico.mostrarStatus();
            exibirMenu();
            int escolha = obterInteiroValido("Escolha uma opÃ§Ã£o: ");

            jogoAcabou = lidarComEscolhaMenu(escolha);
            if (!jogoAcabou) {
                chico.diminuirAtributos(); // Decaimento apÃ³s aÃ§Ã£o
                if (chico.estaMorto()) {
                    jogoAcabou = true;
                    System.out.println("ğŸ’€ Chico morreu... Eu tentei!");
                }
            }
        }
        System.out.println("ğŸ˜¢ Fim de jogo. Obrigado por jogar!");
    }

    // Exibe menu
    private void exibirMenu() {
        System.out.println("\n=== MENU ===");
        System.out.println("1. ğŸ½ï¸ Alimentar Chico");
        System.out.println("2. ğŸ¾ Brincar com Chico");
        System.out.println("3. ğŸ˜´ Colocar para dormir");
        System.out.println("4. ğŸª Loja");
        System.out.println("5. ğŸ¯ Jogar Adivinhe o NÃºmero");
        System.out.println("6. ğŸšª Sair");
    }

    // Lida com escolha do menu
    private boolean lidarComEscolhaMenu(int escolha) {
        switch (escolha) {
            case 1: // Alimentar
                System.out.println("ğŸ– VocÃª alimentou Chico!");
                chico.diminuirFome(0.3);
                chico.aumentarFelicidade(0.1);
                chico.diminuirEnergia(0.1);
                break;
            case 2: // Brincar
                System.out.println("ğŸ¾ VocÃª brincou com Chico!");
                chico.aumentarFelicidade(0.4);
                chico.diminuirEnergia(0.3);
                chico.diminuirFome(0.2);
                break;
            case 3: // Dormir
                System.out.println("ğŸ˜´ Chico foi dormir!");
                chico.aumentarEnergia(0.5);
                chico.diminuirFome(0.1);
                break;
            case 4: // Loja
                lidarComLoja();
                break;
            case 5: // Minijogo
                lidarComMiniJogo();
                break;
            case 6: // Sair
                return true;
            default:
                System.out.println("âŒ OpÃ§Ã£o invÃ¡lida!");
        }
        return false;
    }

    // Lida com loja
    private void lidarComLoja() {
        loja.exibirItens();
        int escolhaItem = obterInteiroValido("Escolha um item (0 para voltar): ");
        if (escolhaItem == 0)
            return;

        Item selecionado = loja.getItemPorIndice(escolhaItem);
        if (selecionado != null) {
            if (chico.comprarItem(selecionado)) {
                System.out.println("âœ… Item comprado e usado! " + selecionado.getNome());
                chico.mostrarStatus(); // Mostra status atualizado
            } else {
                System.out.println("âŒ Bitcoins insuficientes!");
            }
        } else {
            System.out.println("âŒ Item invÃ¡lido!");
        }
    }

    // Lida com minijogo
    private void lidarComMiniJogo() {
        System.out.println("Escolha o nÃ­vel:");
        System.out.println("1. FÃ¡cil (10 BTC)");
        System.out.println("2. MÃ©dio (25 BTC)");
        System.out.println("3. DifÃ­cil (50 BTC)");
        int nivel = obterInteiroValido("NÃ­vel: ");
        int recompensa = miniJogo.iniciarJogo(nivel, chico);
        if (recompensa > 0) {
            chico.adicionarBitcoins(recompensa);
            System.out.println("ğŸ’° VocÃª ganhou " + recompensa + " BTC!");
        }
    }

    // LÃª inteiro vÃ¡lido
    private int obterInteiroValido(String prompt) {
        while (true) {
            System.out.print(prompt);
            if (scanner.hasNextInt()) {
                return scanner.nextInt();
            } else {
                System.out.println("âŒ Digite um nÃºmero inteiro vÃ¡lido!");
                scanner.next(); // Limpa input
            }
        }
    }

    public static void main(String[] args) {
        Main jogo = new Main();
        jogo.iniciarJogo();
    }
}
